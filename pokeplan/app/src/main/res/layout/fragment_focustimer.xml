<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightest_gray">

    <ImageButton
        android:id="@+id/ib_timer_hours_down"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="#00FFFFFF"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_down"
        app:layout_constraintEnd_toEndOf="@+id/tv_focustimer_hours"
        app:layout_constraintStart_toStartOf="@+id/tv_focustimer_hours"
        app:layout_constraintTop_toBottomOf="@+id/tv_focustimer_hours"
        app:tint="@color/pink_button" />

    <ImageButton
        android:id="@+id/ib_timer_hours_up"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:backgroundTint="#00FFFFFF"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_up"
        app:layout_constraintBottom_toTopOf="@+id/tv_focustimer_hours"
        app:layout_constraintEnd_toEndOf="@+id/tv_focustimer_hours"
        app:layout_constraintStart_toStartOf="@+id/tv_focustimer_hours"
        app:tint="@color/pink_button" />

    <ImageButton
        android:id="@+id/ib_timer_secs_up"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="#00FFFFFF"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_up"
        app:layout_constraintBottom_toTopOf="@+id/tv_focustimer_secs"
        app:layout_constraintEnd_toEndOf="@+id/tv_focustimer_secs"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:tint="@color/pink_button" />

    <ImageButton
        android:id="@+id/ib_timer_mins_up"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="#00FFFFFF"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_up"
        app:layout_constraintBottom_toTopOf="@+id/tv_focustimer_mins"
        app:layout_constraintEnd_toEndOf="@+id/tv_focustimer_mins"
        app:layout_constraintStart_toStartOf="@+id/tv_focustimer_mins"
        app:tint="@color/pink_button" />

    <ImageButton
        android:id="@+id/ib_timer_secs_down"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="#00FFFFFF"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_down"
        app:layout_constraintEnd_toEndOf="@+id/tv_focustimer_secs"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/tv_focustimer_secs"
        app:tint="@color/pink_button" />

    <ImageButton
        android:id="@+id/ib_timer_mins_down"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="#00FFFFFF"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_down"
        app:layout_constraintEnd_toEndOf="@+id/tv_focustimer_mins"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/tv_focustimer_mins"
        app:tint="@color/pink_button" />

    <Button
        android:id="@+id/btn_focustimer_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_rectangle"
        android:fontFamily="@font/raleway_bold"
        android:text="START TIMER"
        android:textColor="@color/darkest_gray"
        app:backgroundTint="@color/pink_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_timer_mins_down" />

    <TextView
        android:id="@+id/tv_focustimer_tagline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="@string/focustimer_start_tagline"
        android:textColor="@color/darkest_gray"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ib_timer_mins_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_add_task_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_register_hor20p4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.24" />

        <ImageView
            android:id="@+id/iv_init_bg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/background_cave" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="0.5"
            android:background="@color/green"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_focustimer_start_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/focustimer_title"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/ib_focustimer_info"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="@+id/tv_focustimer_start_title"
                app:layout_constraintStart_toEndOf="@+id/tv_focustimer_start_title"
                app:layout_constraintTop_toTopOf="@+id/tv_focustimer_start_title"
                app:srcCompat="@android:drawable/ic_dialog_info"
                app:tint="@color/pink_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:alpha="0.25"
            app:layout_constraintBottom_toBottomOf="@+id/iv_init_bg3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_init_bg3"
            app:srcCompat="@drawable/circle"
            app:tint="@color/lighter_gray" />

        <ImageView
            android:id="@+id/iv_egg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/imageView7"
            app:srcCompat="@drawable/egg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_register_hor20p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tv_focustimer_hours"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="00"
        android:textColor="@color/darker_gray"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/ib_timer_mins_up" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_bold"
        android:text=":"
        android:textColor="@color/darker_gray"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_focustimer_mins"
        app:layout_constraintTop_toBottomOf="@+id/ib_timer_mins_up" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_bold"
        android:text=":"
        android:textColor="@color/darker_gray"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/tv_focustimer_mins"
        app:layout_constraintTop_toBottomOf="@+id/ib_timer_mins_up" />

    <TextView
        android:id="@+id/tv_focustimer_secs"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="00"
        android:textColor="@color/darker_gray"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/ib_timer_mins_up" />

    <TextView
        android:id="@+id/tv_focustimer_mins"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="10"
        android:textColor="@color/darker_gray"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_add_task_label" />

</androidx.constraintlayout.widget.ConstraintLayout>