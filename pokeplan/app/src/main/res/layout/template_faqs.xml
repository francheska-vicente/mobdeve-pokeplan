<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_faqs_tamplate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tv_faqs_template_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_weight="1"
        android:fontFamily="@font/raleway_bold"
        android:justificationMode="inter_word"
        android:text="1. What is the Focus Timer?"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_faqs_template_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:fontFamily="@font/raleway_light_italic"
        android:justificationMode="inter_word"
        android:text="The focus timer is a timer that would help you avoid the temptation of using your device when you are trying to be productive. In using the focus timer, you would be encouraged not to touch, move or use your device during its duration as there is a PokÃ©mon awaiting you at the end of it."
        android:textSize="12sp" />

    <View
        android:id="@+id/div_faqs"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@color/darker_gray" />
</LinearLayout>